{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "outDir": "./dist",
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@modules/*": ["src/modules/*"]
        },
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
