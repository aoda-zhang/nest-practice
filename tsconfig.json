{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@modules/*": ["./src/modules/*"]
        },
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
